        <script>
            function agregarHabilidad() {
            var nuevaHabilidad = document.getElementById("habilidadNueva").value.trim();
            if (nuevaHabilidad !== "") {
                var li = document.createElement("li");
                li.className = "list-group-item";
                li.textContent = nuevaHabilidad;
                document.getElementById("listaHabilidades").appendChild(li);

                // Actualizar el campo de entrada oculto con todas las habilidades
                var habilidades = document.querySelectorAll("#listaHabilidades li");
                var habilidadesArray = [];
                habilidades.forEach(function(habilidad) {
                    habilidadesArray.push(habilidad.textContent);
                });
                document.getElementById("habilidadesInput").value = habilidadesArray.join(",");
                document.getElementById("habilidadNueva").value = "";
            }
        }

