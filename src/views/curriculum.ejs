                                        <option value="Estudios de posgrado completos (Maestría, Doctorado)">Estudios de posgrado completos (Maestría, Doctorado)</option>
                                        <option value="Formación técnica especializada (cursos, diplomados)">Formación técnica especializada (cursos, diplomados)</option>
                                        <option value="Educación continua o de adultos">Educación continua o de adultos</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="habilidades" class="form-label">Habilidades</label>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" id="habilidadNueva" placeholder="Ingresa una habilidad">
                                        <button class="btn btn-outline-secondary" type="button" onclick="agregarHabilidad()">Agregar</button>
                                    </div>
                                    <ul id="listaHabilidades" class="list-group"></ul>
                                    <!-- Campo oculto para almacenar las habilidades como cadena -->
                                    <input type="hidden" id="habilidadesInput" name="habilidades">
                                </div>
                                    <ul id="listaHabilidades" class="list-group"></ul>
                                  </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary">Crear</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
